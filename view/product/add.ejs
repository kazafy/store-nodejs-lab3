<% include ../layout/header %>

        <div class="row ">
            <div class="col s12 offset-m3 m6 offset-l3  l6">
                <div class="card hoverable">
                    <form method="post" action="/product/new" enctype="multipart/form-data" >
                        <div class="row">
                            <div class="input-field col offset-s1 s10">
                                <input id="name" name="name" type="text" class="validate">
                                <label for="name">product Name</label>
                            </div>
                            <div class="input-field col offset-s1 s10">
                                <input id="price" name="price" type="number" class="validate">
                                <label for="price">price</label>
                            </div>
                            <div class="input-field col offset-s1 s10">
                                <input id="desc" name="desc" type="text" class="validate">
                                <label for="desc">desc</label>
                            </div>
                            <div class="input-field col offset-s1 s10">
                                <input id="category" name="category" type="text" class="validate">
                                <label for="category">category</label>
                            </div>

                            <div class="input-field col offset-s1 s10">
                                <input id="image" name="img" type="file" class="validate">
                                <label for="image">image url</label>
                            </div>

                            <div class="col s12">
                                <button class="btn  red  col offset-s1 offset-l1 s10 l10 waves-effect waves-light" type="submit" name="submit">add
                                </button>
                                <br/>

                            </div>
                            <div class="col s12">
                                <br />
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
<%include ../layout/footer %>