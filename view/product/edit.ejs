<%include ../layout/header %>

        <div class="row ">
            <div class="col s12 offset-m3 m6 offset-l4  l4">
                <div class="card hoverable">
                    <form method="post" action="/product/edit/<%=product.id%>">
                        <div class="row ">
                            <div class="input-field col offset-s1 s10">
                                <input id="name" name="name" value="<%= product.name %>" type="text" class="validate">
                                <label for="name">product Name</label>
                            </div>
                            <div class="input-field col offset-s1 s10">
                                <input id="price" name="price" value="<%= product.price %>" type="number" class="validate">
                                <label for="price">price</label>
                            </div>
                            <div class="input-field col offset-s1 s10">
                                <input id="desc" name="desc" type="text" value="<%= product.desc %>" class="validate">
                                <label for="desc">desc</label>
                            </div>
                            <div class="input-field col offset-s1 s10">
                                <input id="category" name="category" value="<%= product.category %>" type="text" class="validate">
                                <label for="category">category</label>
                            </div>

                            <div class="input-field col offset-s1 s10">
                                <input id="image" name="img" value="<%= product.img %>" type="text" class="validate">
                                <label for="image">image url</label>
                            </div>

                            <div class="col s12">
                                <button class="btn  red  col offset-s1 offset-l1 s10 l10 waves-effect waves-light" type="submit" name="submit">update
                                </button>
                                <br/>

                            </div>
                            <div class="col s12">
                                <br />
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
<%include ../layout/footer %>